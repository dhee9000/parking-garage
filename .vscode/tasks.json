{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Linux",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "make -o ${workspaceFolderBasename}"
            ]
        },
        {
            "label": "Build Windows",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "mingw32-make",
            "args": [
                "-o",
                "${workspaceFolderBasename}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build Linux",
                "Build Windows"
            ]
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "bash",
            "args": [
                "-c",
                "make run"
            ]
        }
    ]
}